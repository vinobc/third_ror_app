<% if object.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(object.errors.count, "error") %>
			encountered and so this <%= object.class.to_s.underscore.humanize.downcase %> can't be saved
		</h2>
		<p>pblms:</p>
		<ul>
			<%= object.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>