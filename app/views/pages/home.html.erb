<% if signed_in? %>
	<table class="front" summary="for signed-in users">
		<tr>
			<td class="main">
				<h1 class="tinypost">New Post</h1><br />
				<%= render 'shared/tinypost_form' %>
				<%= render 'shared/feed' %>
			</td>
			<td class="sidebar round">
				<%= render 'shared/user_info' %>
				<%= render 'shared/stats' %>
			</td>
		</tr>
	</table>
	
<% else %>

	<h1><center>tiny-blogger!</center></h1>
	<p> <center></center><br />
		<%=link_to "Sign Up!", signup_path, :class=>"signup round"%>
	</p>
	
<% end %>
		

